source "https://rubygems.org"

# 1. Jekyll 3.9 엔진
gem "jekyll", "~> 3.9.0"

# 2. Ruby 4.0 호환 패치 (에러 방지용)
gem "webrick"
gem "csv"
gem "bigdecimal"
gem "base64"
gem "logger"

# 3. 플러그인 자동 로딩 그룹 (여기에 넣으면 설정 없이 바로 작동합니다!)
group :jekyll_plugins do
  gem "jekyll-remote-theme"
  gem "jekyll-include-cache"
  gem "kramdown-parser-gfm"
  gem "jekyll-gist"       # 아까 에러 냈던 녀석
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  gem "jemoji"
end